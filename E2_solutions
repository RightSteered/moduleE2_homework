let array=[2, "element", true, 42, 53, null, 4]
let nums = 0;
let strings = 0;
let bools = 0;
let undefs = 0;
for(a=0; a<array.length; a++){
  switch(typeof(array[a])){
    case "number":
      nums +=1;
      break;
    case "string":
      strings +=1;
      break;
    case "boolean":
      bools +=1;
      break;
    case "undefined":
      undefs +=1;
      break;
         }
      };
if (nums>0||strings>0||bools>0||undefs>0){
  console.log(true);
}


let array=[2, "element", true, 42, 53, null, 4]
let evenNums = 0;
let notEvenNums = 0;
let zeroes = 0;
let others = 0;
for(a=0; a<array.length; a++){
  if (typeof(array[a])=="number"){
    if (array[a] == 0){
      zeroes +=1
    }else if (array[a]%2 != 0){
      notEvenNums +=1
    } else if (array[a]%2 == 0){
      evenNums +=1
    }
  }else{
    others +=1 
  }
}
