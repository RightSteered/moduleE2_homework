let a;
console.log(typeof a);
switch (typeof a){
  case "number":
    console.log("This is a number");
    break;
  case "string":
    console.log("This is a string");
    break;
  case "boolean":
    console,log("This is a boolean");
    break;
  case "undefined":
    console.log("Type undefined");
}

